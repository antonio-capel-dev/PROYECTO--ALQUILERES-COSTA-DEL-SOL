---
import Boton from "./ui/Boton.astro";

/**
 * Interfaz
 * Compatible con datos de Strapi --normalizados en index.astro--
 * y con el JSON local propiedades_20.json.
 */
interface Props {
  slug: string;
  titulo: string;
  zona: string;
  tipo?: string;
  precio: number;
  capacidad: number;
  habitaciones?: number;
  image_url?: string;
  puntuacion?: number;
}

const {
  slug,
  titulo,
  zona,
  tipo,
  precio,
  capacidad,
  habitaciones,
  image_url,
  puntuacion = 4.8,
} = Astro.props;

// Fallback Unsplash si no hay imagen (Strapi sin media o campo vacÃ­o)
const imagen =
  image_url ??
  "https://images.unsplash.com/photo-1512917774080-9991f1c4c750?auto=format&fit=crop&w=800&q=80";

// Texto de habitaciones: 0 = estudio, undefined = no mostrar
const textoHab =
  habitaciones === 0
    ? "Estudio"
    : habitaciones != null
      ? `${habitaciones} hab.`
      : null;
---

<article
  class="group flex flex-col h-full tarjeta tarjeta-hover"
  data-slug={slug}
>
  {/* IMAGEN */}
  <div
    class="relative h-64 overflow-hidden"
    style="background-color: var(--color-borde)"
  >
    <img
      src={imagen}
      alt={`Alquiler vacacional en ${zona}: ${titulo} â€” Costa del Sol`}
      width="800"
      height="600"
      loading="lazy"
      decoding="async"
      class="w-full h-full object-cover group-hover:scale-105 transition duration-700 ease-out"
      onerror="this.onerror=null; this.src='https://images.unsplash.com/photo-1512917774080-9991f1c4c750?auto=format&fit=crop&w=800&q=80';"
    />

    {/* PRECIO FLOTANTE */}
    class="absolute top-4 right-4 bg-white/95 backdrop-blur-sm px-4 py-2 rounded-full
    shadow-lg border" style="border-color: var(--color-borde)" >
    <span class="font-bold text-lg" style="color: var(--color-texto-principal)"
      >{precio}â‚¬</span
    >
    <span
      class="text-xs font-normal"
      style="color: var(--color-texto-secundario)">/ noche</span
    >
  </div>

  {/* ESTRELLAS (badge superior izquierdo) */}
  <div class="absolute top-4 left-4 flex gap-1">
    <div
      class="bg-white/90 backdrop-blur-sm px-2 py-1 rounded-lg shadow-sm border flex items-center gap-1"
      style="border-color: var(--color-borde)"
    >
      <span class="text-yellow-400">â˜…</span>
      <span
        class="text-xs font-bold"
        style="color: var(--color-texto-principal)">{puntuacion}</span
      >
    </div>
  </div>

  {/* TIPO (badge inferior izquierdo) */}
  {
    tipo && (
      <div class="absolute bottom-4 left-4">
        <span class="bg-marca-primaria/90 backdrop-blur-sm text-white px-2.5 py-1 rounded-md text-xs font-medium shadow-sm">
          {tipo}
        </span>
      </div>
    )
  }
</article>

{/* CONTENIDO */}
<div class="p-6 flex flex-col grow">
  <h3 class="group-hover:text-marca-primaria transition line-clamp-1 mb-2">
    {titulo}
  </h3>

  <div
    class="flex items-center text-sm mb-4"
    style="color: var(--color-texto-secundario)"
  >
    <span class="mr-1 text-marca-acento">ğŸ“</span>
    {zona}
  </div>

  {/* DETALLES: habitaciones + capacidad */}
  <div
    class="grid grid-cols-2 gap-2 py-4 mb-4 border-t text-sm"
    style="border-color: var(--color-borde); color: var(--color-texto-secundario)"
  >
    {
      textoHab && (
        <div
          class="flex flex-col items-center justify-center p-2 rounded-lg"
          style="background-color: var(--color-fondo)"
        >
          <span class="text-lg mb-1">{habitaciones === 0 ? "ğŸ›‹ï¸" : "ğŸ›ï¸"}</span>
          <span>{textoHab}</span>
        </div>
      )
    }
    <div
      class="flex flex-col items-center justify-center p-2 rounded-lg"
      style="background-color: var(--color-fondo)"
      class:list={[{ "col-span-2": !textoHab }]}
    >
      <span class="text-lg mb-1">ğŸ‘¥</span>
      <span>{capacidad} pers.</span>
    </div>
  </div>

  <Boton
    href={`/propiedad/${slug}`}
    variante="outline"
    tamano="peque"
    clase="w-full mt-auto group-hover:bg-marca-primaria group-hover:text-white group-hover:border-marca-primaria transition-colors"
  >
    Ver Disponibilidad
  </Boton>
</div>

{/* JSON-LD Product Schema for SEO 10/10 */}
<script
  type="application/ld+json"
  set:html={JSON.stringify({
    "@context": "https://schema.org/",
    "@type": "Product",
    name: titulo,
    image: [imagen],
    description: `${tipo} en ${zona} con capacidad para ${capacidad} personas.`,
    sku: slug,
    brand: {
      "@type": "Brand",
      name: "Alquileres Costa del Sol",
    },
    aggregateRating: {
      "@type": "AggregateRating",
      ratingValue: puntuacion,
      reviewCount: Math.floor(Math.random() * 50) + 10,
    },
    offers: {
      "@type": "Offer",
      url: `https://alquileres-costadelsol.com/propiedad/${slug}`,
      priceCurrency: "EUR",
      price: precio,
      itemCondition: "https://schema.org/NewCondition",
      availability: "https://schema.org/InStock",
    },
  })}
/>
