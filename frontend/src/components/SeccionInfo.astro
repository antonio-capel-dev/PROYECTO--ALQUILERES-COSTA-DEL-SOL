---
import Boton from "./ui/Boton.astro";
import Icon from "./ui/Icon.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const contactUrl = lang === "es" ? "/contacto" : `/${lang}/contact`;
---

<section class="section-lg bg-primario text-fondo-claro overflow-hidden">
  <div class="contenedor-fluido">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <!-- Columna izquierda: contenido -->
      <div>
        <p class="eyebrow text-sol/90 mb-4">{t("info.badge")}</p>
        <h2 class="texto-balance font-extrabold text-fondo-claro mb-6">
          {t("info.title.1")}
          <span
            class="text-transparent bg-clip-text bg-gradient-to-r from-acento to-fondo-claro/80"
            >{t("info.title.highlight")}</span
          >
        </h2>
        <p class="text-fondo-claro/70 text-lg leading-relaxed mb-8">
          {t("info.p1.1")}<strong class="text-fondo-claro"
            >{t("info.p1.strong")}</strong
          >.
          {t("info.p2.1")}<strong class="text-fondo-claro"
            >{t("info.p2.strong1")}</strong
          >{t("info.p2.2")}
        </p>

        <!-- 3 bullets con iconos -->
        <ul class="space-y-5 mb-10">
          <li class="flex items-start gap-4">
            <span
              class="shrink-0 w-10 h-10 rounded-xl bg-secundario/20 flex items-center justify-center"
            >
              <Icon
                name="check-circle"
                class="w-5 h-5 text-acento"
                aria-hidden="true"
              />
            </span>
            <div>
              <p class="font-semibold text-fondo-claro">
                {t("info.bullet1.title")}
              </p>
              <p class="text-fondo-claro/60 text-sm mt-0.5">
                {t("info.bullet1.desc")}
              </p>
            </div>
          </li>
          <li class="flex items-start gap-4">
            <span
              class="shrink-0 w-10 h-10 rounded-xl bg-secundario/20 flex items-center justify-center"
            >
              <Icon
                name="phone"
                class="w-5 h-5 text-acento"
                aria-hidden="true"
              />
            </span>
            <div>
              <p class="font-semibold text-fondo-claro">
                {t("info.bullet2.title")}
              </p>
              <p class="text-fondo-claro/60 text-sm mt-0.5">
                {t("info.bullet2.desc")}
              </p>
            </div>
          </li>
          <li class="flex items-start gap-4">
            <span
              class="shrink-0 w-10 h-10 rounded-xl bg-secundario/20 flex items-center justify-center"
            >
              <Icon
                name="map-pin"
                class="w-5 h-5 text-acento"
                aria-hidden="true"
              />
            </span>
            <div>
              <p class="font-semibold text-fondo-claro">
                {t("info.bullet3.title")}
              </p>
              <p class="text-fondo-claro/60 text-sm mt-0.5">
                {t("info.bullet3.desc")}
              </p>
            </div>
          </li>
        </ul>

        <!-- Trust chips -->
        <div class="flex flex-wrap gap-3 mb-10">
          <span
            class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-fondo-claro/10 text-fondo-claro/80 text-xs font-medium border border-fondo-claro/20"
          >
            <Icon
              name="check-circle"
              class="w-3.5 h-3.5 text-sol"
              aria-hidden="true"
            />
            +20 propiedades activas
          </span>
          <span
            class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-fondo-claro/10 text-fondo-claro/80 text-xs font-medium border border-fondo-claro/20"
          >
            <Icon name="star" class="w-3.5 h-3.5 text-sol" aria-hidden="true" />
            4.9/5 valoración media
          </span>
          <span
            class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-fondo-claro/10 text-fondo-claro/80 text-xs font-medium border border-fondo-claro/20"
          >
            <Icon
              name="users"
              class="w-3.5 h-3.5 text-sol"
              aria-hidden="true"
            />
            Equipo local desde 2010
          </span>
        </div>

        <!-- Stats row: visible solo en móvil/tablet (el panel completo se ve en desktop) -->
        <div
          class="grid grid-cols-3 gap-4 p-4 bg-fondo-claro/10 rounded-2xl mb-8 border border-fondo-claro/10 lg:hidden"
        >
          <div class="text-center">
            <p class="text-2xl font-extrabold text-sol">15+</p>
            <p class="text-fondo-claro/60 text-xs mt-1">años activos</p>
          </div>
          <div class="text-center">
            <p class="text-2xl font-extrabold text-sol">20</p>
            <p class="text-fondo-claro/60 text-xs mt-1">propiedades</p>
          </div>
          <div class="text-center">
            <p class="text-2xl font-extrabold text-sol">4.9</p>
            <p class="text-fondo-claro/60 text-xs mt-1">valoración</p>
          </div>
        </div>
        <Boton href={contactUrl} variante="primario">
          Hablar con un asesor local
        </Boton>
      </div>

      <!-- Columna derecha: panel visual -->
      <div class="relative hidden lg:block">
        <!-- Tarjeta decorativa de confianza -->
        <div
          class="rounded-2xl bg-fondo-claro/5 border border-fondo-claro/10 backdrop-blur-sm p-8"
        >
          <div class="flex items-center gap-3 mb-6">
            <div
              class="w-12 h-12 rounded-full bg-secundario/30 flex items-center justify-center"
            >
              <Icon
                name="users"
                class="w-6 h-6 text-fondo-claro"
                aria-hidden="true"
              />
            </div>
            <div>
              <p class="font-bold text-fondo-claro text-sm">{t("info.team")}</p>
              <p class="text-fondo-claro/50 text-xs">Málaga, España</p>
            </div>
          </div>
          <blockquote
            class="text-fondo-claro/80 text-sm leading-relaxed italic mb-6"
          >
            "{t("info.quote")} Para nosotros cada reserva es una historia que empieza
            bien."
          </blockquote>
          <div
            class="grid grid-cols-3 gap-4 pt-6 border-t border-fondo-claro/10"
          >
            <div class="text-center">
              <p class="text-2xl font-extrabold text-sol">15+</p>
              <p class="text-fondo-claro/50 text-xs mt-1">años activos</p>
            </div>
            <div class="text-center">
              <p class="text-2xl font-extrabold text-sol">20</p>
              <p class="text-fondo-claro/50 text-xs mt-1">propiedades</p>
            </div>
            <div class="text-center">
              <p class="text-2xl font-extrabold text-sol">4.9</p>
              <p class="text-fondo-claro/50 text-xs mt-1">valoración</p>
            </div>
          </div>
        </div>
        <!-- Elemento decorativo -->
        <div
          class="absolute -bottom-6 -right-6 w-48 h-48 rounded-full bg-acento/10 -z-10"
        >
        </div>
        <div
          class="absolute -top-6 -left-6 w-32 h-32 rounded-full bg-sol/10 -z-10"
        >
        </div>
      </div>
    </div>
  </div>
</section>
