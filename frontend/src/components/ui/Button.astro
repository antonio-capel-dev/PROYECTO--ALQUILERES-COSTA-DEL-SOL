---
interface Props {
  href?: string;
  variant?: "primary" | "secondary" | "outline" | "ghost";
  size?: "sm" | "md" | "lg";
  class?: string;
  type?: "button" | "submit" | "reset";
}

const {
  href,
  variant = "primary",
  size = "md",
  class: className = "",
  type = "button",
} = Astro.props;

// Diccionario de estilos seg√∫n la variante (Sincronizado con @theme en global.css)
const variants = {
  primary: "btn-primary",
  secondary: "btn-secondary",
  outline: "btn-outline",
  ghost: "btn-ghost hover:bg-slate-100 text-slate-600",
};

const sizes = {
  sm: "btn-sm",
  md: "", // Default size
  lg: "btn-lg",
};

const styles = `btn ${variants[variant]} ${sizes[size]} ${className}`;
---

{
  href ? (
    <a href={href} class={styles}>
      <slot />
    </a>
  ) : (
    <button type={type} class={styles}>
      <slot />
    </button>
  )
}
