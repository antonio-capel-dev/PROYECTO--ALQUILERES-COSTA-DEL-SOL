---
interface Props {
  variante?: "acento" | "primario" | "oscuro" | "exito";
  clase?: string;
}

const { variante = "acento", clase = "" } = Astro.props;

const variantes = {
  acento: "bg-marca-acento/10 text-marca-acento border-marca-acento/20",
  primario: "bg-marca-primaria/10 text-marca-primaria border-marca-primaria/20",
  oscuro: "bg-marca-oscura/10 text-marca-oscura border-marca-oscura/20",
  exito: "bg-green-100 text-green-700 border-green-200",
};

const estilos = `
  inline-block px-3 py-1 rounded-full text-xs font-semibold tracking-wide 
  uppercase border backdrop-blur-sm
  ${variantes[variante]}
  ${clase}
`;
---

<span class={estilos}>
  <slot />
</span>
