---
interface Props {
  variante?: "acento" | "primario" | "oscuro" | "exito";
  clase?: string;
}

const { variante = "acento", clase = "" } = Astro.props;

const variantes = {
  acento: "bg-acento/10 text-acento border-acento/20",
  primario: "bg-secundario/10 text-secundario border-secundario/20",
  oscuro: "bg-primario/10 text-primario border-primario/20",
  exito: "bg-green-100 text-green-700 border-green-200",
};

const estilos = `
  inline-block px-3 py-1 rounded-full text-xs font-semibold tracking-wide 
  uppercase border backdrop-blur-sm
  ${variantes[variante]}
  ${clase}
`;
---

<span class={estilos}>
  <slot />
</span>
