---
interface Props {
  items: { label: string; href: string; active?: boolean }[];
  backLink?: { label: string; href: string };
}

const { items, backLink } = Astro.props;
---

<nav aria-label="Breadcrumb" class="bg-slate-50 border-b border-slate-200 py-3">
  <div
    class="contenedor-fluido flex flex-wrap items-center justify-between gap-2"
  >
    {/* RUTA JERÁRQUICA */}
    <ol class="flex items-center text-sm">
      {
        items.map((item, index) => (
          <li class="flex items-center">
            {index > 0 && <span class="mx-2 text-slate-300">/</span>}
            {item.active ? (
              <span class="text-marca-oscura font-bold" aria-current="page">
                {item.label}
              </span>
            ) : (
              <a
                href={item.href}
                class="text-slate-500 hover:text-marca-primaria transition font-medium"
              >
                {item.label}
              </a>
            )}
          </li>
        ))
      }
    </ol>

    {/* BOTÓN VOLVER (Opcional pero recomendado) */}
    {
      backLink && (
        <a
          href={backLink.href}
          class="text-xs font-semibold text-marca-primaria hover:text-marca-oscura hover:underline flex items-center gap-1 transition-colors ml-auto sm:ml-0"
        >
          <span class="text-lg leading-none">←</span> {backLink.label}
        </a>
      )
    }
  </div>
</nav>
