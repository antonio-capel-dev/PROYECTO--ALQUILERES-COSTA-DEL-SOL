---
/**
 * Hero.astro — Componente hero institucional.
 * Paleta mediterránea: overlay único from-fondo-oscuro/via-primario/to-secundario.
 * Imagen local, sin dependencias externas.
 */

interface Props {
  titulo: string;
  tituloDestacado?: string;
  subtitulo?: string;
  badge?: string;
  ctaLabel?: string;
  ctaHref?: string;
  imagen?: string;
}

const {
  titulo,
  tituloDestacado,
  subtitulo,
  badge,
  ctaLabel,
  ctaHref = "/#rentals",
  imagen = "/images/zonas/fondo_hero_playa.webp",
} = Astro.props;
---

<section class="relative min-h-[90vh] flex items-center overflow-hidden">
  {/* Imagen de fondo */}
  <div
    class="absolute inset-0 bg-cover bg-center z-0"
    style={`background-image: url('${imagen}');`}
  ></div>

  {/* Overlay mediterráneo único — profundo / náutico / elegante */}
  <div
    class="absolute inset-0 bg-gradient-to-br from-fondo-oscuro/85 via-primario/60 to-secundario/30 z-10"
  ></div>

  {/* Contenido */}
  <div class="relative z-20 max-w-5xl mx-auto px-6 py-32 text-center w-full">
    {
      badge && (
        <div class="inline-block mb-6 px-4 py-1.5 rounded-full bg-white/10 border border-white/20 text-white text-sm font-semibold tracking-wide uppercase backdrop-blur-sm">
          {badge}
        </div>
      )
    }

    <h1 class="text-white mb-6">
      {titulo}
      {
        tituloDestacado && (
          <>
            <br />
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-acento to-white/80">
              {tituloDestacado}
            </span>
          </>
        )
      }
    </h1>

    {
      subtitulo && (
        <p class="text-xl text-fondo-claro/90 max-w-2xl mx-auto mb-10 font-light leading-relaxed">
          {subtitulo}
        </p>
      )
    }

    {
      ctaLabel && (
        <a
          href={ctaHref}
          class="boton boton-grande bg-acento hover:bg-sky-600 text-white border-0 shadow-lg shadow-acento/30"
        >
          {ctaLabel}
        </a>
      )
    }

    <slot />
  </div>
</section>
