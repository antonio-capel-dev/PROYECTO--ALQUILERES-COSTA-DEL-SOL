        >
      </a>
    </div>

    {
      rentals.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
          {rentals.map((rental: any) => (
            <FichaAlquiler
              titulo={rental.title}
              precio={rental.price}
              capacidad={rental.detalles?.capacidad || 0}
              slug={rental.slug || rental.documentId}
              image_url={
                rental.image?.url
                  ? rental.image.url.startsWith("http")
                    ? rental.image.url
                    : `${STRAPI_URL}${rental.image.url}`
                  : undefined
              }
              zona={ubicacion.nombre}
            />
          ))}
        </div>
      ) : (
