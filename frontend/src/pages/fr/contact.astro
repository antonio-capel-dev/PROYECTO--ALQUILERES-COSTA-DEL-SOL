---
import Layout from "../../layouts/Layout.astro";
import Boton from "../../components/ui/Boton.astro";
import Badge from "../../components/ui/Badge.astro";
import Icon from "../../components/ui/Icon.astro";
import { useTranslations } from "../../i18n/utils";

const t = useTranslations("fr");
---

<Layout
  titulo={t('meta.contact.title')}
  descripcion={t('meta.contact.desc')}
  breadcrumbs={[{ nombre: "Contact", url: "/fr/contact" }]}
>
  <script
    is:inline
    type="application/ld+json"
    set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ContactPage",
      mainEntity: {
        "@type": "Organization",
        name: "Locations Costa del Sol",
        email: "alquilerescostadelsol2026@gmail.com",
        telephone: "+34612345678",
        contactPoint: {
          "@type": "ContactPoint",
          telephone: "+34612345678",
          contactType: "customer service",
          areaServed: "ES",
          availableLanguage: ["es", "en", "fr"],
        },
        address: {
          "@type": "PostalAddress",
          streetAddress: "Calle Larios 1",
          addressLocality: "Málaga",
          postalCode: "29005",
          addressCountry: "ES",
        },
      },
    })}
  />

  <section class="bg-fondo-claro py-24 px-4 relative overflow-hidden">
    <div class="absolute top-0 right-0 w-96 h-96 bg-secundario/5 rounded-full -mr-48 -mt-48 blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-acento/5 rounded-full -ml-48 -mb-48 blur-3xl"></div>

    <div class="max-w-7xl mx-auto relative z-10">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-20 items-center">

        <div>
          <Badge variante="acento" clase="mb-6">Nous sommes là pour vous</Badge>
          <h1 class="text-5xl font-extrabold text-primario mb-8 tracking-tight">
            Parlons-en.<br />
            <span class="text-secundario">À un clic près</span>
          </h1>
          <p class="text-texto-secundario mb-12 text-xl leading-relaxed font-light">
            Des questions sur une propriété ou vous souhaitez que nous gérions votre location ?
            Dites-nous ce dont vous avez besoin et notre équipe locale vous répondra sous 24 heures.
          </p>

          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div class="flex items-start gap-4 p-6 bg-white rounded-2xl shadow-sm border border-superficie">
              <div class="w-12 h-12 bg-secundario/10 rounded-xl flex items-center justify-center text-secundario shrink-0">
                <Icon name="map-pin" class="w-5 h-5" aria-hidden="true" />
              </div>
              <div>
                <p class="font-bold text-primario mb-1">Notre Bureau</p>
                <p class="text-texto-secundario text-sm">Calle Larios 1, 29005 Málaga, Espagne</p>
              </div>
            </div>

            <div class="flex items-start gap-4 p-6 bg-white rounded-2xl shadow-sm border border-superficie">
              <div class="w-12 h-12 bg-secundario/10 rounded-xl flex items-center justify-center text-secundario shrink-0">
                <Icon name="phone" class="w-5 h-5" aria-hidden="true" />
              </div>
              <div>
                <p class="font-bold text-primario mb-1">Téléphone</p>
                <a href="tel:+34612345678" class="text-secundario text-sm hover:underline">+34 612 345 678</a>
              </div>
            </div>

            <div class="flex items-start gap-4 p-6 bg-white rounded-2xl shadow-sm border border-superficie">
              <div class="w-12 h-12 bg-secundario/10 rounded-xl flex items-center justify-center text-secundario shrink-0">
                <Icon name="mail" class="w-5 h-5" aria-hidden="true" />
              </div>
              <div>
                <p class="font-bold text-primario mb-1">E-mail</p>
                <a href="mailto:alquilerescostadelsol2026@gmail.com" class="text-secundario text-sm hover:underline break-all">
                  alquilerescostadelsol2026@gmail.com
                </a>
              </div>
            </div>

            <div class="flex items-start gap-4 p-6 bg-white rounded-2xl shadow-sm border border-superficie">
              <div class="w-12 h-12 bg-secundario/10 rounded-xl flex items-center justify-center text-secundario shrink-0">
                <Icon name="clock" class="w-5 h-5" aria-hidden="true" />
              </div>
              <div>
                <p class="font-bold text-primario mb-1">Horaires</p>
                <p class="text-texto-secundario text-sm">Lun–Ven : 9h–18h</p>
              </div>
            </div>
          </div>
        </div>

        <div id="form-wrapper-fr" class="bg-white rounded-3xl shadow-xl p-8 border border-superficie">
          <h2 class="text-2xl font-bold text-primario mb-8">Envoyez-nous un message</h2>
          <div id="form-error-fr" role="alert" aria-live="assertive" class="hidden mb-6 flex items-start gap-3 bg-red-50 border border-red-200 text-red-700 rounded-xl px-4 py-3 text-sm">
            <svg class="w-5 h-5 mt-0.5 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            <span id="form-error-text-fr">Une erreur est survenue. Veuillez réessayer.</span>
          </div>
          <form id="form-fr" class="space-y-6" data-strapi-url={import.meta.env.PUBLIC_STRAPI_URL || "http://localhost:1337"} novalidate>
            <div>
              <label for="nombre" class="block text-sm font-semibold text-primario mb-2">Nom complet *</label>
              <input type="text" id="nombre" name="nombre" required
                class="w-full px-4 py-3 rounded-xl border border-superficie focus:ring-2 focus:ring-secundario focus:border-secundario outline-none transition bg-fondo-claro"
                placeholder="Jean Dupont" />
            </div>
            <div>
              <label for="email" class="block text-sm font-semibold text-primario mb-2">Adresse e-mail *</label>
              <input type="email" id="email" name="email" required
                class="w-full px-4 py-3 rounded-xl border border-superficie focus:ring-2 focus:ring-secundario focus:border-secundario outline-none transition bg-fondo-claro"
                placeholder="jean@exemple.com" />
            </div>
            <div>
              <label for="asunto" class="block text-sm font-semibold text-primario mb-2">Sujet</label>
              <select id="asunto" name="asunto"
                class="w-full px-4 py-3 rounded-xl border border-superficie focus:ring-2 focus:ring-secundario outline-none transition bg-fondo-claro">
                <option value="">Sélectionnez un sujet...</option>
                <option value="reserva">Réservation de vacances</option>
                <option value="gestion">Gestion de propriété</option>
                <option value="info">Informations générales</option>
                <option value="otro">Autre</option>
              </select>
            </div>
            <div>
              <label for="mensaje" class="block text-sm font-semibold text-primario mb-2">Message *</label>
              <textarea id="mensaje" name="mensaje" rows="5" required
                class="w-full px-4 py-3 rounded-xl border border-superficie focus:ring-2 focus:ring-secundario focus:border-secundario outline-none transition bg-fondo-claro resize-none"
                placeholder="Décrivez l'hébergement idéal pour vous..."></textarea>
            </div>
            <input type="text" name="website" class="hidden" tabindex="-1" autocomplete="off" />
            <Boton type="submit" variante="primario" clase="w-full text-center">
              Envoyer le message
            </Boton>
          </form>
        </div>

      </div>
    </div>
  </section>

<script>
  const form = document.getElementById("form-fr");
  const wrapper = document.getElementById("form-wrapper-fr");
  const errorBanner = document.getElementById("form-error-fr");
  const errorText = document.getElementById("form-error-text-fr");

  function mostrarError(msg) {
    errorText.textContent = msg;
    errorBanner.classList.remove("hidden");
    errorBanner.scrollIntoView({ behavior: "smooth", block: "nearest" });
  }
  function ocultarError() { errorBanner.classList.add("hidden"); }

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    ocultarError();
    const btn = form.querySelector("button[type='submit']");
    const btnText = btn.innerHTML;
    const honeypot = form.querySelector("input[name='website']");
    if (honeypot && honeypot.value.trim() !== "") return;
    const nombre = form.querySelector("[name='nombre']").value.trim();
    const email = form.querySelector("[name='email']").value.trim();
    const mensaje = form.querySelector("[name='mensaje']").value.trim();
    if (!nombre || !email || !mensaje) {
      mostrarError("Veuillez remplir tous les champs obligatoires.");
      return;
    }
    if (nombre.length > 100) {
      mostrarError("Le nom ne peut pas dépasser 100 caractères.");
      return;
    }
    if (!/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email)) {
      mostrarError("Adresse e-mail invalide. Vérifiez le format.");
      return;
    }
    if (mensaje.length > 2000) {
      mostrarError("Le message ne peut pas dépasser 2000 caractères.");
      return;
    }
    btn.disabled = true;
    btn.innerHTML = '<span class="flex items-center justify-center gap-2"><svg class="animate-spin h-5 w-5 text-white" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Envoi en cours...</span>';
    const asunto = form.querySelector("[name='asunto']") ? form.querySelector("[name='asunto']").value.trim() : '';
    const data = { nombre, email, asunto, mensaje };
    try {
      const STRAPI_URL = form.dataset.strapiUrl || "http://localhost:1337";
      const res = await fetch(`${STRAPI_URL}/api/contactos`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ data }),
      });
      if (res.ok) {
        wrapper.innerHTML = `
          <div class="text-center p-8">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" class="w-16 h-16 text-green-500 mx-auto mb-6"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><path d="m9 11 3 3L22 4"/></svg>
            <h2 class="text-2xl font-bold text-primario mb-4">Message reçu</h2>
            <p class="text-texto-secundario mb-8">Merci, <strong>${data.nombre}</strong>. Nous vous contacterons dans les 24 heures à <strong>${data.email}</strong>.</p>
            <a href="/fr" class="inline-block bg-secundario text-white px-8 py-4 rounded-xl font-bold hover:opacity-90 transition-opacity">Retour accueil</a>
          </div>
        `;
      } else {
        mostrarError("Envoi impossible. Vérifiez le serveur et réessayez.");
        btn.disabled = false;
        btn.innerHTML = btnText;
      }
    } catch (err) {
      mostrarError("Erreur réseau. Vérifiez votre connexion.");
      btn.disabled = false;
      btn.innerHTML = btnText;
    }
  });
</script>

</Layout>
