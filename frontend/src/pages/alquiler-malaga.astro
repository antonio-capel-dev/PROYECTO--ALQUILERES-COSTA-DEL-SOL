---
import Layout from "../layouts/Layout.astro";
import Icon from "../components/ui/Icon.astro";

const title =
  "Alquiler en Málaga Capital | Pisos en Centro, Teatinos y Malagueta";
const description =
  "Alquila tu piso en Málaga Capital. Zonas universitarias (Teatinos), Centro Histórico y primera línea de playa en La Malagueta.";
---

<Layout
  titulo={title}
  descripcion={description}
  imagen="/images/malaga-seo.jpg"
  breadcrumbs={[{ nombre: "Alquiler Málaga", url: "/alquiler-malaga" }]}
>
  <section class="relative bg-primario py-32 px-6 overflow-hidden">
    <div class="absolute inset-0 z-0 opacity-40">
      <div
        class="absolute inset-0 bg-linear-to-r from-secundario to-secundario mix-blend-multiply filter blur-3xl opacity-50 animate-pulse"
      >
      </div>
      <div
        class="absolute -top-24 -left-24 w-96 h-96 bg-acento rounded-full mix-blend-multiply filter blur-3xl opacity-30"
      >
      </div>
    </div>

    <div class="relative z-10 max-w-5xl mx-auto text-center">
      <div
        class="inline-block mb-4 px-4 py-1.5 rounded-full bg-secundario/10 border border-secundario/20 text-acento text-sm font-semibold tracking-wide uppercase backdrop-blur-sm"
      >
        <Icon name="compass" class="w-4 h-4 inline-block mr-1" aria-hidden="true" /> Cultura y Vida
      </div>
      <h1
        class="text-white mb-8"
      >
        Alquileres en <br />
        <span
          class="text-transparent bg-clip-text bg-linear-to-r from-acento to-secundario"
          >Málaga Capital</span
        >
      </h1>
      <p
        class="text-xl text-fondo-claro/80 max-w-2xl mx-auto mb-10 font-light leading-relaxed"
      >
        Málaga combina cultura, playa y tecnología. El destino preferido de
        Europa.
      </p>
    </div>
  </section>

  <section class="max-w-7xl mx-auto px-4 py-16">
    <div class="prose lg:prose-xl mx-auto text-texto-secundario">
      <h2 class="text-3xl font-bold text-primario mb-6">
        Málaga: La ciudad de moda en Europa
      </h2>
      <p class="mb-4">
        Zonas universitarias (Teatinos), Centro Histórico y primera línea de
        playa en La Malagueta. Es el destino preferido para <strong
          >estudiantes</strong
        > y <strong>nómadas digitales</strong>.
      </p>
    </div>

    <div
      class="mt-16 text-center bg-fondo-claro p-12 rounded-3xl border-2 border-dashed border-secundario/20"
    >
      <div class="flex justify-center mb-4">
        <Icon name="compass" class="w-12 h-12 text-secundario/40" aria-hidden="true" />
      </div>
      <p class="text-xl text-primario font-bold">
        Cargando propiedades en Málaga...
      </p>
      <p class="text-sm text-texto-secundario mt-2">
        (Conexión con Strapi en mantenimiento)
      </p>
    </div>
  </section>
</Layout>
