{
  "kind": "collectionType",
  "collectionName": "rentals",
  "info": {
    "singularName": "rental",
    "pluralName": "rentals",
    "displayName": "Rental"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "precio_centimos": {
      "type": "integer",
      "description": "Ready for payments (e.g., Stripe integration)"
    },
    "city": {
      "type": "string",
      "private": false,
      "description": "@deprecated - Single Source of Truth es la relación 'ubicacion'. Este campo es mantenido para fallbacks de frontend."
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "location": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false
    },
    "metaTitle": {
      "type": "string",
      "description": "SEO Field - Mantenido en el nivel raíz por consistencia del MVP y rendimiento en queries REST/GraphQL.",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "metaDescription": {
      "type": "text",
      "description": "SEO Field - Mantenido en el nivel raíz por consistencia del MVP y rendimiento en queries REST/GraphQL.",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "ubicacion": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::ubicacion.ubicacion",
      "inversedBy": "rentals"
    },
    "detalles": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "inmueble.detalles",
      "repeatable": false
    },
    "Servicios": {
      "type": "component",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "component": "inmueble.servicios",
      "repeatable": false
    }
  }
}